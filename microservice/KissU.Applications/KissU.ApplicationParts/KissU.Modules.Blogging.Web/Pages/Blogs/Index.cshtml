@page
@using KissU.Modules.Blogging.Domain.Shared.Localization.Blogging
@using Microsoft.AspNetCore.Mvc.Localization
@using KissU.Modules.Blogging.Web.Pages.Blogs
@inject IHtmlLocalizer<BloggingResource> L
@model IndexModel
@{
    ViewBag.PageTitle = "Blogs";
}
<h2>
    @L["Blogs"]
</h2>

<ul>
    @foreach (var blog in Model.Blogs)
    {
        <li><a asp-page="./Posts/Index" asp-route-blogShortName="@blog.ShortName">@blog.Name</a></li>
    }
</ul>
