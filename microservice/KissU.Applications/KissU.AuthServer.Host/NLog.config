<?xml version="1.0" encoding="utf-8" ?>
<!--NLog日志配置-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="./logs/nlog.log">
  <!--==========变量定义============-->
  <!--应用程序名称-->
  <variable name="applicationName" value="nlog"/>
  <!--日志输出目录-->
  <variable name="logPath" value="./logs/${applicationName}"/>
  <!--===========输出目标===========-->
  <!--异步执行-->
  <targets async="true">
    <!--写入控制台，用于开发阶段排错-->
    <target name="console" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false" layout="${longdate}|${pad:padding=5:inner=${level:uppercase=true}}|${message}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
    <!--写入文件，用于开发阶段排错-->
    <target name="file" xsi:type="File" archiveAboveSize="1024000" layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" fileName="${logPath}/${shortdate}.log" />
  </targets>
  <!--=============规则=============-->
  <rules>
    <!-- 写入文件，日志级别：Trace,Debug,Info,Warn,Error,Fatal,Off -->
    <logger minlevel="Trace" name="*" writeTo="console,file" />
  </rules>
</nlog>