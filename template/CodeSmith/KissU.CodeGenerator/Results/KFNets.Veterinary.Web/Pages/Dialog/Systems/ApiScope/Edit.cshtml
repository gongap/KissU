@page
@model ApiScopeDto
@*标题*@
<page-header title="编辑Api许可范围" [autoBreadcrumb]="false"></page-header>
@*表单*@
<util-card show-border="false">
    <util-form id="form" label-span="4" control-span="20" gutter="16">
        <util-textbox for="ApiId"></util-textbox>
        <util-textbox for="Name"></util-textbox>
        <util-textbox for="DisplayName"></util-textbox>
        <util-textbox for="Description"></util-textbox>
        <util-textbox for="ClaimTypes"></util-textbox>
        <util-switch for="Required"></util-switch>
        <util-switch for="Emphasize"></util-switch>
        <util-switch for="ShowInDiscoveryDocument"></util-switch>
        <util-form-item justify="End">
            <util-form-control class="w-auto">
                <util-button class="mr-sm" text="取消" on-click="close()"></util-button>
                <util-button id="btnSubmit" validate-form="true" color="Primary" on-click="submit(form,btnSubmit)"></util-button>
            </util-form-control>
        </util-form-item>
    </util-form>
</util-card>