@page
@model RoleDto
<page-header title="角色"></page-header>
<util-card show-border="false">
    @*查询表单*@
    @await Html.PartialAsync( "Index.Query" )
    @*工具按钮*@
    <util-a class="mr-sm" color="Primary" icon="Plus" text="新建" link="create"></util-a>
    <util-button id="btnDelete" color="Danger" icon="Delete" text="删除" on-click="delete(btnDelete)"></util-button>
    @*提示语*@
    <util-alert class="my-md" type="Info" show-icon="true">
        已选择<strong class="text-primary mx-md">{{getCheckedNodes().length}}</strong>行
    </util-alert>
    @*表格*@
	<util-tree-table id="treeTable_Role" base-url="role" query-param="queryParam">
		<util-tree-table-column for="Code"></util-tree-table-column>
		<util-tree-table-column for="Name"></util-tree-table-column>
		<util-tree-table-column for="NormalizedName"></util-tree-table-column>
		<util-tree-table-column for="Type"></util-tree-table-column>
		<util-tree-table-column for="IsAdmin"></util-tree-table-column>
		<util-tree-table-column for="Comment"></util-tree-table-column>
		<util-tree-table-column for="PinYin"></util-tree-table-column>
		<util-tree-table-column for="Sign"></util-tree-table-column>
        <util-table-column title="操作">
		    <util-button class="mr-sm" color="Primary" shape="Circle" icon="Plus" tooltip="添加子级" on-click="openCreateDialog(row)"></util-button>
            <util-button class="mr-sm" id="btnMoveUp" shape="Circle" icon="ArrowUp" tooltip="上移" ng-if="!isFirst(row)" on-click="moveUp(row,btnMoveUp,$event)"></util-button>
            <util-button class="mr-sm" id="btnMoveDown" shape="Circle" icon="ArrowDown" tooltip="下移" ng-if="!isLast(row)" on-click="moveDown(row, btnMoveDown,$event)"></util-button>
            <nz-dropdown>
                <util-button class="mr-sm" shape="Circle" tooltip="更多" nz-dropdown>
                    <i nz-icon nzType="more"></i>
                </util-button>
                <util-menu id="menu">
                    <util-menu-item on-click="openEditDialog(row)">编辑</util-menu-item>
                    <util-menu-item on-click="delete(null,row.id)">删除</util-menu-item>
                    <util-menu-item on-click="openDetailDialog(row)">详情</util-menu-item>
                </util-menu>
            </nz-dropdown>
        </util-table-column>
	</util-tree-table>
</util-card>