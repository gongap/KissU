@page
@model ModuleDto
@*标题*@
<page-header title="编辑模块" [autoBreadcrumb]="false"></page-header>
@*表单*@
<util-card show-border="false">
    <util-form id="form" label-span="3" control-span="21" gutter="16">
        <util-form-item>
            <util-form-label for="ApplicationName"></util-form-label>
            <util-form-control>
                <util-label bind-text="applicationName" />
            </util-form-control>
        </util-form-item>
        <util-form-item>
            <util-form-label label="父模块"></util-form-label>
            <util-form-control>
                <util-label for="ParentName"/>
                <util-button class="ml-sm" color="Primary" shape="Circle" icon="Search" tooltip="请选择父模块" on-click="openSelectDialog()"></util-button>
            </util-form-control>
        </util-form-item>
        <util-textbox for="Name"></util-textbox>
        <util-textbox for="Url"></util-textbox>
        <util-textbox for="Icon"></util-textbox>
        <util-switch for="Enabled"></util-switch>
        <util-textbox for="SortId"></util-textbox>
        <util-textarea for="Remark"></util-textarea>
        <util-form-item justify="End">
            <util-form-control class="w-auto">
                <util-button class="mr-sm" text="取消" on-click="close()"></util-button>
                <util-button id="btnSubmit" validate-form="true" color="Primary" on-click="submit(form,btnSubmit)"></util-button>
            </util-form-control>
        </util-form-item>
    </util-form>
</util-card>