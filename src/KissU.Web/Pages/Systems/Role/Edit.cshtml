@page
@model RoleDto

<util-form id="form" on-submit="submit(form,btnSubmit)">
    <util-card>
        <util-card-header>
            <util-card-title>
                编辑角色
            </util-card-title>
        </util-card-header>
        <util-card-content>
            <util-divider inset="true" />
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Code"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Name"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="NormalizedName"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Type"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-slide-toggle for="IsAdmin"></util-slide-toggle>
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="ParentId"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Path"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Level"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="SortId"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-slide-toggle for="Enabled"></util-slide-toggle>
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Comment"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="PinYin"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Sign"></util-textbox>                
                </util-layout-item>
            </util-layout>
        </util-card-content>
        <util-card-actions align="Right">
            <util-button text="返回" styles="Default" on-click="back()"></util-button>
            <util-button id="btnSubmit" type="Submit" color="Primary"></util-button>
        </util-card-actions>
    </util-card>
</util-form>