@model ApplicationQuery
<util-form [nzLayout]="'inline'" class="search__form">
    <div nz-row [nzGutter]="{ xs: 8, sm: 8, md: 8, lg: 24, xl: 48, xxl: 48 }">
        <div nz-col nzMd="8" nzSm="24">
            <nz-form-item>
                <nz-form-label nzFor="no">搜索关键字</nz-form-label>
                <util-textbox for="Keyword"></util-textbox>
            </nz-form-item>
        </div>
        <div nz-col [nzSpan]="expandForm ? 24 : 8" [class.text-right]="expandForm">
            <util-button id="btnQuery" color="Primary" text="查询" on-click="query(btnQuery)">
                <util-icon type="Search"></util-icon>
            </util-button>
            <util-button id="btnRefresh" text="刷新" on-click="refresh(btnRefresh)" class="mx-sm">
                <util-icon type="Sync"></util-icon>
            </util-button>
            <a (click)="expandForm=!expandForm">
                {{expandForm ? '收起' : '展开'}}
                <i class="anticon" [class.anticon-down]="!expandForm" [class.anticon-up]="expandForm"></i>
            </a>
        </div>
    </div>
</util-form>